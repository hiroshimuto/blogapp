<div class="signup-contents">
  <div class="contents row">
    <h2 class="title">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name %> <br />
      <%= f.text_field :name, autofocus: true, placeholder: "お名前を入力してください" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: "メールアドレスを入力してください" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワードを入力してください" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードを入力してください" %>
    </div>
    <div class="signup">
      <div class="btn waves-effect waves-light">
        <%= f.submit "Sign up" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
