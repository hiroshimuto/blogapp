
  <div class="col s12 m12 l12">
    <div class="card">
      <%= link_to "/posts/#{post.id}", method: :get do %>
        <div class="card-image">
          <img src="<%= post.image %>">
          <span class="card-title"><%= post.title %></span>
        </div>
        <div class="card-content">
          <p class="truncate"><%= post.content %></p>
        </div>
      <% end %>
      <div class="card-action clearfix">
          <li class="name"><a href="/users/<%= post.user_id %>"><%= post.user.name %></a></li>
          <% if user_signed_in? && current_user.id == post.user_id %>
          <li class="icons">
            <%= link_to "/posts/#{post.id}/edit", method: :get do %>
              <i class="material-icons">mode_edit</i>
            <% end %>
            <%= link_to "/posts/#{post.id}", method: :delete do %>
              <i class="material-icons">delete</i>
            <% end %>
          </li>
          <% end %>
      </div>
    </div>
  </div>



